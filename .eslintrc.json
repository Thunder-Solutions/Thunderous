{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "curly": "off",
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "lines-around-comment": ["error", {
            "beforeLineComment": true
        }],
        "padded-blocks": "off",
        "quote-props": ["error", "consistent-as-needed"],
        "comma-dangle": ["error", "always-multiline"]
    }
}
